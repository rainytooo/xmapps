					<div class="submit_error"><%= flash[:error] %></div><!-- .error -->
					<% end %>
					<%= hidden_field_tag(:attachment_id, @dl_attachment.id) %>
					<div class="global_form">			
						<%= show_simple_captcha(:label => "请输入验证码") %>					
					</div>
					<div class="form_tips">本次下载将要扣除5个金币,关于金币的获取和使用的更多帮助请访问</div>
					
					
					<div id="form_submit">
						<input id="campaign_submit" class="download" name="commit" type="submit" value="">				
					</div>
					<div class="clear"></div>	
				
				<% end %>
				</div><!-- .form_left -->
				
				<div class="form_right">
					<div class="user_upload">
						<p>
							<input type="button" class="upload_img"  onclick="location.href='<%= new_downloads_dl_thread_path %>'">
						</p>
					</div>
					<h5>我当前的金币为:<%= @extcredits.extcredits6%></h5>
					<h5>如何获取积分和金币</h5>
