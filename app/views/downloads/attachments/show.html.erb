<% content_for :head do %>
<title>小马过河-下载文件-<%= @dl_attachment.originname%></title>
<meta name="description" content="下载<%= @dl_attachment.originname%>" /> 
<meta name="keywords" content="小马过河 英语 学习资料 下载" /> 
<% end %>

		<div class="content_container">
			<div class="page_path">
				<%= link_to "首页", root_path %> &gt;&gt; <%= link_to "资源下载", dl_index_path %> &gt;&gt; 下载文件
			</div><!-- .page_path -->
			<div class="page_title">
				<h1>
					下载 <%= @dl_attachment.originname%>
				</h1>
			</div>
			<div class="form_container">
				
				<div class="form_left">
				<%= form_tag(downloads_attachments_path, :method => "post", :validate => true) do%>
					<% if flash[:message] %>
					<div class="submit_message"><%= flash[:message] %></div><!-- .message -->
					<% end %>
